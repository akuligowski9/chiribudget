    "prepare": "husky",
    "test": "jest --testPathIgnorePatterns='integration|e2e'",
    "test:watch": "jest --watch --testPathIgnorePatterns='integration|e2e'",
    "test:coverage": "jest --coverage --testPathIgnorePatterns='integration|e2e'",
    "test:integration": "node scripts/seed-test-db.js --clean && jest --config jest.integration.config.js",
    "seed:test": "node scripts/seed-test-db.js --clean",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:demo-only": "playwright test --config=playwright.config.demo-only.js"
